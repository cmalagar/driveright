<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark">


    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/engine_speed"
        android:textColor="@android:color/holo_blue_bright" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/accel_pos"
        android:textColor="@android:color/holo_blue_bright" />
    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/veh_speed"
        android:textColor="@android:color/holo_blue_bright" />

    <TextView
        android:text="Brakes: Waiting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/brake_pedal"
        android:textColor="@android:color/holo_blue_bright" />

    <Button
        android:text="STOP DRIVE SESSION"
        android:layout_width="match_parent"
        android:layout_height="346dp"
        android:id="@+id/.dos_save"
        android:background="@android:color/darker_gray" />

    <fragment
        android:name="com.example.cameron.fordapp.End_Drive_Fragment"
        android:id="@+id/ended_driving_view"
        android:gravity="center"
        android:layout_height="105dp"
        android:layout_alignParentTop="true"
        android:layout_width="300px" />

</LinearLayout>