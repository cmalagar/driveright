<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_log"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cameron.fordapp.ViewLog">

    <TextView
        android:text="Drive Summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewLogTitleTextView"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Save Trip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp"
        android:id="@+id/saveTripButton"
        />

    <TextView
        android:text="Acceleration:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accelerationTextView"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/viewLogTitleTextView"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accelerationGradeTextView"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_alignBottom="@+id/accelerationTextView"
        android:layout_toEndOf="@+id/viewLogTitleTextView" />

    <TextView
        android:text="# Rules Broken:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/numRulesBrokenTextview"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_below="@+id/accelerationTextView"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/overallGradeTextView"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_alignBaseline="@+id/overallTextView"
        android:layout_alignBottom="@+id/overallTextView"
        android:layout_alignStart="@+id/accelerationGradeTextView" />

    <TextView
        android:text="Overall:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/overallTextView"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_above="@+id/saveTripButton"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rulesBrokenTextView"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_alignTop="@+id/numRulesBrokenTextview"
        android:layout_alignStart="@+id/accelerationGradeTextView" />

</RelativeLayout>
